<div class="user mx-4">
  <div class="row">
    {{#each contactos}}
    <div class="col-md-3 mb-4">
      <div class="card mb-3" data-nombre="{{this.nombre}}" style="display: flex; flex-direction: column; align-items: center; padding: 10px; background-image: url('images/back.jpg'); background-size: cover; background-position: center;">
        <div style="margin-bottom: 10px;">
          {{#if this.photo}}
          <img src="{{this.photo}}" class="card-img-top rounded-circle mx-auto" style="width: 100px; height: 100px;" alt="Foto de {{this.nombre}}">
          {{else}}
          <img src="images/user.avif" class="card-img-top rounded-circle mx-auto" style="width: 100px; height: 100px;" alt="Foto predeterminada">
          {{/if}}
        </div>
        <div class="card-body text-center">
          <!-- Mostrar el nombre del contacto -->
          <h5 class="card-title">{{this.nombre}}</h5>
          <!-- Agregar otros detalles del contacto -->
          <p class="card-text"><strong>Teléfono:</strong> {{this.telefono}}</p>
          <p class="card-text"><strong>Correo:</strong> {{this.correo}}</p>
        </div>
        <!-- Agregar botones para borrar, ver detalles y mensajes -->
        <div class="card-footer" style="margin-top: auto;">
          <a href="/borrar/{{this.id}}" class="btn btn-danger btn-block">Borrar</a>
          <a href="/presentar_mascota?id={{this.id}}" class="btn btn-primary btn-block">Ver detalles</a>
          <a href="/mensajes/{{this.id}}" class="btn btn-success btn-block">Mensajes</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>



<footer class="d-flex justify-content-center align-items-center py-3 my-4 border-top bg-gradient text-dark fixed-bottom">
  <div class="col-md-4 text-center">
    <span class="mb-3 mb-md-0">© 2024 CLINICA SOLVITEC</span>
