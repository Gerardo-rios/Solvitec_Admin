<h2> Citas Aceptadas </h2>
<div class="user mt-4 mb-4 mx-4">
  <div class="row">
    {{#each citas}}
      <div class="col-md-3">
        <div class="card" id={{this.id}}>
          <div class="card-body">
            <h5 class="card-title">{{this.datos.nombre}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Fecha:
              {{this.datos.fecha}}</h6>
            <p class="card-text">Motivo: {{this.datos.motivo}}</p>
            <!-- Campo para descripción -->
            <p class="card-text">Descripción: {{this.datos.descripcion}}</p>

            <div class="text-end">
              <!-- Botones de Atender y No se presentó -->
              <button type="button" class="btn btn-primary">Atender</button>
              <button type="button" class="btn btn-secondary">No se presentó</button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>