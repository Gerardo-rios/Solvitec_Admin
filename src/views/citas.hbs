<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <h2 class="text-center mb-4">Citas Aceptadas</h2>
      {{#if citas.length}}
        <div class="row">
          {{#each citas}}
            <div class="col-md-3 mb-4">
              <div class="card h-100" id="cita-{{this.id}}">
                <div class="card-body">
                  <h5 class="card-title">{{this.datos.nombre}}</h5>
                  <h6 class="card-subtitle mb-2 text-muted">Fecha: {{this.datos.fecha}}</h6>
                  <p class="card-text">Motivo: {{this.datos.motivo}}</p>
                  <p class="card-text">Descripción: {{this.datos.descripcion}}</p>
                  <div class="text-end">
                    <button type="button" class="btn btn-primary atenderCitaBtn" onclick="window.location.href='/presentar_mascota?id={{this.datos.id_usuario}}&cita_id={{this.id}}';">Atender</button>
                    <button type="button" class="btn btn-secondary noPresenteBtn" data-id="{{this.id}}">No se presentó</button>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="alert alert-info" role="alert">
          No existen citas aceptadas todavía.
        </div>
      {{/if}}
    </div>
  </div>
</div>


